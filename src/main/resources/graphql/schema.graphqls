type Book {
    id: ID
    title: String
    author: String
    description: String
}

type Query {
    books: [Book]
    bookById(id: ID): Book
}

type Mutation {
    createBook(title: String!, description: String, author: String!): Book!
    updateBook(id: String!, title: String!, description: String, author: String!): Book!
    deleteBook(id: String!): Book
}